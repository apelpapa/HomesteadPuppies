<%- include("../partials/header.ejs") %>
<%- include("./adminBar.ejs") %>

<div class="container text-left col-6 pt-2">
  <h2>Manage Breeds</h2>

  <div class="container">
    <form action="/submitNewBreed" method="post" class="row g-3 needs-validation" novalidate>
      <div class="col-md-4">
        <label for="breedName" class="form-label">Add New</label>
        <input type="text" class="form-control" id="breedName" name="breedName" placeholder="Name" required>
      </div>
      <div class="col-12">
        <button type="submit" class="btn btn-primary">Add</button>
      </div>
    </form>
  </div>

  <div class="container my-4">
    <table class="table">
      <thead>
        <tr>
          <th scope="col">Delete</th>
          <th scope="col">Breed</th>
          <th scope="col">Number of Parents</th>
          <th scope="col">Number of Available Puppies</th>
        </tr>
      </thead>
      <tbody>
        <% for(var i = 0; breeds.length > i; i++) { %>
        <tr>
          <th scope="row">
            <form action="/deleteBreed" method="post">
              <input type="hidden" name="breedName" id="breedName" value = "<%= breeds[i].breed %>" >
            <button type="submit" class="btn btn-danger btn-sm">
              <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash3" viewBox="0 0 16 16">
                <path d="M6.5 1h3a.5.5 0 0 1 .5.5v1H6v-1a.5.5 0 0 1 .5-.5M11 2.5v-1A1.5 1.5 0 0 0 9.5 0h-3A1.5 1.5 0 0 0 5 1.5v1H1.5a.5.5 0 0 0 0 1h.538l.853 10.66A2 2 0 0 0 4.885 16h6.23a2 2 0 0 0 1.994-1.84l.853-10.66h.538a.5.5 0 0 0 0-1zm1.958 1-.846 10.58a1 1 0 0 1-.997.92h-6.23a1 1 0 0 1-.997-.92L3.042 3.5zm-7.487 1a.5.5 0 0 1 .528.47l.5 8.5a.5.5 0 0 1-.998.06L5 5.03a.5.5 0 0 1 .47-.53Zm5.058 0a.5.5 0 0 1 .47.53l-.5 8.5a.5.5 0 1 1-.998-.06l.5-8.5a.5.5 0 0 1 .528-.47M8 4.5a.5.5 0 0 1 .5.5v8.5a.5.5 0 0 1-1 0V5a.5.5 0 0 1 .5-.5"></path>
              </svg>
            </button>
          </form>
          </th>
          <td><%= breeds[i].breed %></td>
          <td>Number of Parents</td>
          <td scope="col">Number of Available Puppies</td>
        </tr>
        <%}%>
      </tbody>
    </table>
  </div>





  <script>
    (() => {
      'use strict'
      const forms = document.querySelectorAll('.needs-validation')
      Array.from(forms).forEach(form => {
        form.addEventListener('submit', event => {
          if (!form.checkValidity()) {
            event.preventDefault()
            event.stopPropagation()
          }

          form.classList.add('was-validated')
        }, false)
      })
    })()
  </script>
</div>

<%- include("../partials/footer.ejs") %>