<%- include("../partials/header.ejs") %>
<%- include("./adminBar.ejs") %>

<div class="container-fluid text-center justify-content-center">
  <div class="table-responsive col-auto ">
    <table class="table">
      <caption>Puppies</caption>
      <thead>
        <tr>
          <th scope="col">ID</th>
          <th scope="col">Name</th>
          <th scope="col">Breed</th>
          <th scope="col">Gender</th>
          <th scope="col">Date-of-Birth</th>
          <th scope="col">Mother</th>
          <th scope="col">Father</th>
          <th scope="col">AKC Registrable</th>
          <th scope="col">Price</th>
          <th scope="col">Sold Status</th>
          <th scope="col">Number Images</th>
          <th scope="col">Edit</th>
        </tr>
      </thead>


      <% for(var i = 0; i<puppies.length; i++){ 
    
    const date = new Date(puppies[i].dob);
    const options = { year: 'numeric', month: 'long', day: 'numeric' };
    const formattedDate = date.toLocaleDateString('en-US', options);
    const htmlDate = date.toISOString().split('T')[0];
    const akc = puppies[i].akcregistrable ? 'Yes' : 'No'
    const sold = puppies[i].sold ? 'Yes' : 'No' 
    const filteredURLs = imageURLs.filter(finder => finder.puppyid === puppies[i].id) 
    %>

      <tbody>
        <tr>
          <td><%= puppies[i].id %></td>
          <td><%= puppies[i].name %></td>
          <td><%= puppies[i].breed %></td>
          <td><%= puppies[i].gender %></td>
          <td><%= formattedDate %></td>
          <td><%= puppies[i].mother %></td>
          <td><%= puppies[i].father %></td>
          <td><%= akc %></td>
          <td><%= puppies[i].price %></td>
          <td><%= sold %></td>
          <td><%= filteredURLs.length %></td>
          <td>
            <button type="button" class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target= <%=`#${puppies[i].id}info`%>>
              Edit Info
            </button>
            <button type="button" class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target= <%=`#${puppies[i].id}photo`%>>
              Edit Photos
            </button>
            <button type="button" class="btn btn-danger btn-sm" data-bs-toggle="modal" data-bs-target= <%=`#${puppies[i].id}delete`%>> 
              DELETE
              </button>
          </td>
        </tr>
      </tbody>

      <div class="modal fade" id= <%=`${puppies[i].id}info`%> data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h1 class="modal-title fs-5" id="staticBackdropLabel">Update Information</h1>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
              <form action="/updatePuppy" method="post" class="row g-3">
                <input type="hidden" name="id" id="id" value= <%= puppies[i].id %> />
                <div class="col">
                  <label for="puppyName" class="form-label">Name</label>
                  <input type="text" class="form-control" id="puppyName" name="puppyName" placeholder="Name" value=<%= puppies[i].name %> required>
                </div>
                <div class="col">
                  <label for="puppyBreed" class="form-label">Breed</label>
                  <input class="form-control" list="datalistOptions" id="puppyBreed" name="puppyBreed" placeholder="Breed" value=<%= puppies[i].breed %> required>
                  <datalist id="datalistOptions">
                    <option value="Cavalier King Charles Spaniel">
                    <option value="Golden Retriever">
                    <option value="Shih Tzu">
                    <option value="Obsidian Retriever">
                    <option value="Dachshund">
                  </datalist>
                </div>
                <div class="col">
                  <label class="form-label" for="genderSelect"> Gender </label>
                  <select class="form-select" aria-label="Default select example" name="genderSelect" required>
                    <option value="">Select Gender</option>
                    <option value="Male">Male</option>
                    <option value="Female">Female</option>
                  </select>
                </div>
                <div class="col">
                  <label class="form-label" for="startDate">Date of Birth</label>
                  <input id="startDate" class="form-control" type="date" name="dob" value=<%= htmlDate %> required />
                </div>
                <div class="col">
                  <label class="form-label" for="price">Price </label>
                  <div class="input-group mb-3">
                    <span class="input-group-text">$</span>
                    <input type="text" class="form-control" name="price" placeholder="(Optional)" value=<%= puppies[i].price %> required>
                    <span class="input-group-text">.00</span>
                  </div>
                </div>
                <div class="col">
                  <label for="puppyMother" class="form-label">Puppy's Mother</label>
                  <input type="text" class="form-control" id="puppyMother" name="puppyMother" placeholder="Mother's Name" value=<%= puppies[i].mother %> required>
                </div>
                <div class="col">
                  <label for="puppyFather" class="form-label">Puppy's Father</label>
                  <input type="text" class="form-control" id="puppyFather" name="puppyFather" placeholder="Father's Name" value=<%= puppies[i].father %> required>
                </div>
                <div class="col py-2">
                  <label for="akcRegistrable">AKC Registrable?</label>
                  <div class="form-check">
                    <input class="form-check-input" type="radio" name="akcRegistrable" id="akcRegistrable" value="false" required>
                    <label class="form-check-label" for="flexRadioDefault1">
                      No
                    </label>
                  </div>
                  <div class="form-check">
                    <input class="form-check-input" type="radio" name="akcRegistrable" id="akcRegistrable" value="true">
                    <label class="form-check-label" for="flexRadioDefault2">
                      Yes
                    </label>
                  </div>
                </div>
                <div class="col py-2">
                  <label for="soldStatus">Sold?</label>
                  <div class="form-check">
                    <input class="form-check-input" type="radio" name="soldStatus" id="soldStatus" value="false" required>
                    <label class="form-check-label" for="flexRadioDefault1">
                      No
                    </label>
                  </div>
                  <div class="form-check">
                    <input class="form-check-input" type="radio" name="soldStatus" id="soldStatus" value="true">
                    <label class="form-check-label" for="flexRadioDefault2">
                      Yes
                    </label>
                  </div>
                </div>

            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
              <button type="submit" class="btn btn-primary">Update</button>
            </div>
            </form>
          </div>
        </div>
      </div>

      <div class="modal fade" id= <%=`${puppies[i].id}photo`%> data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h1 class="modal-title fs-5" id="staticBackdropLabel">Only Change Updates</h1>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
              <form action="/updatePuppyImages" method="post" enctype="multipart/form-data" class="row g-3">
                <div class="col">
                  <label for="puppyImageUpload" class="form-label">Image Upload</label>
                  <input class="form-control" type="file" name="puppyImageUpload" multiple>
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                  <button type="submit" class="btn btn-primary">Update</button>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>

      <div class="modal fade" id= <%= `${puppies[i].id}delete` %> data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h1 class="modal-title fs-5" id="staticBackdropLabel">DELETE PUPPY (NOT RECOMMENDED)</h1>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
              <form action="/deletePuppy" method="post" class="row g-3">
                <div class="col">
                  <label for="puppyImageUpload" class="form-label">(EDIT)It is recommended to mark puppies as sold and to not delete.</label>
                  <button type="submit" class="btn btn-danger">Danger</button>
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                  <button type="submit" class="btn btn-primary">Update</button>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
      <% } %>
  </div>
</div>

</table>
</div>
</div>

<%- include("../partials/footer.ejs") %>