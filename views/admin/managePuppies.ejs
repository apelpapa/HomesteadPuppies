<%- include("../partials/header.ejs") %>
<%- include("./adminBar.ejs") %>

<div class="container-fluid text-center justify-content-center pt-3">
  <div class="table-responsive col-auto ">
    <table class="table">
      <caption>Puppies</caption>
      <thead>
        <tr>
          <th scope="col">ID</th>
          <th scope="col">Name</th>
          <th scope="col">Breed</th>
          <th scope="col">Gender</th>
          <th scope="col">Date-of-Birth</th>
          <th scope="col">Mother</th>
          <th scope="col">Father</th>
          <th scope="col">AKC Registrable</th>
          <th scope="col">Price</th>
          <th scope="col">Sold Status</th>
          <th scope="col">Number Images</th>
          <th scope="col">Edit</th>
        </tr>
      </thead>


      <% for(let i = 0; i<puppies.length; i++){ 
    
    const date = new Date(puppies[i].dob);
    const options = { year: 'numeric', month: 'long', day: 'numeric' };
    const formattedDate = date.toLocaleDateString('en-US', options);
    const htmlDate = date.toISOString().split('T')[0];
    const akc = puppies[i].akcregistrable ? 'Yes' : 'No'
    const sold = puppies[i].sold ? 'Yes' : 'No' 
    const filteredURLs = imageURLs.filter(finder => finder.puppyid === puppies[i].id) 
    %>

      <tbody>
        <tr>
          <td><%= puppies[i].id %></td>
          <td><%= puppies[i].name %></td>
          <td><%= puppies[i].breed %></td>
          <td><%= puppies[i].gender %></td>
          <td><%= formattedDate %></td>
          <td><%= puppies[i].mother %></td>
          <td><%= puppies[i].father %></td>
          <td><%= akc %></td>
          <td><%= puppies[i].price %></td>
          <td><%= sold %></td>
          <td><%= filteredURLs.length %></td>
          <td>
            <button type="button" class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="<%=`#${puppies[i].id}info`%>">
              Edit Info
            </button>
            <button type="button" class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="<%=`#${puppies[i].id}photo`%>">
              Edit Photos
            </button>
            <button type="button" class="btn btn-danger btn-sm" data-bs-toggle="modal" data-bs-target="<%=`#${puppies[i].id}delete`%>">
              DELETE
            </button>
          </td>
        </tr>
      </tbody>

      <div class="modal fade" id="<%=`${puppies[i].id}info`%>" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h1 class="modal-title fs-5" id="staticBackdropLabel">Update Information</h1>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
              <form action="/updatePuppy" method="post" class="row g-3">
                <input type="hidden" name="id" id="id" value="<%= puppies[i].id %>" />
                <div class="col">
                  <label for="puppyName" class="form-label">Name</label>
                  <input type="text" class="form-control" id="puppyName" name="puppyName" placeholder="Name" value="<%= puppies[i].name %>" required>
                </div>
                <div class="col">
                  <label for="puppyBreed" class="form-label">Breed</label>
                  <select class="form-select" name="puppyBreed" id="puppyBreed">
                    <option>All Breeds</option>
                    <% for(let j = 0; j < breeds.length; j++) { %>
                    <option value="<%= breeds[j].breed %>" <%=  puppies[i].breed == breeds[j].breed ? 'selected' : '' %>><%= breeds[j].breed %></option>
                    <% } %>
                  </select>
                </div>
                <div class="col">
                  <label class="form-label" for="genderSelect"> Gender </label>
                  <select class="form-select" aria-label="Default select example" name="genderSelect" required>
                    <option value="">Select Gender</option>
                    <option value="Male" <%= puppies[i].gender === 'Male' ? 'selected' : '' %>>Male</option>
                    <option value="Female" <%= puppies[i].gender === 'Female' ? 'selected' : '' %>>Female</option>
                  </select>
                </div>
                <div class="col">
                  <label class="form-label" for="startDate">Date of Birth</label>
                  <input id="startDate" class="form-control" type="date" name="dob" value="<%= htmlDate %>" required />
                </div>
                <div class="col">
                  <label class="form-label" for="price">Price </label>
                  <div class="input-group mb-3">
                    <span class="input-group-text">$</span>
                    <input type="text" class="form-control" name="price" placeholder="(Optional)" value="<%= puppies[i].price %>" required>
                    <span class="input-group-text">.00</span>
                  </div>
                </div>
                <div class="col">
                  <label for="puppyMother" class="form-label">Puppy's Mother</label>
                  <select class="form-select" aria-label="" id="puppyMother" name="puppyMother" required>
                    <option value="">Select Mother</option>
                    <% for(let j=0; mothers.length > j; j++){ %>
                    <option value="<%= mothers[j].name %>" <%= puppies[i].mother === mothers[j].name ? 'selected' : '' %>><%= mothers[j].name %></option>
                    <%}%>
                  </select>
                </div>
                <div class="col">
                  <label class="form-label" for="puppyFather"> Father </label>
                    <select class="form-select" aria-label="" id="puppyFather" name="puppyFather" required>
                     <option value="">Select Father</option>
                      <% for(let j=0; fathers.length > j; j++){ %>
                    <option value="<%= fathers[j].name %>" <%= puppies[i].father === fathers[j].name ? 'selected' : '' %>><%= fathers[j].name %></option>
                    <%}%>
                    </select>
                    </div>
                <div class="col py-2">
                  <label for="akcRegistrable">AKC Registrable?</label>
                  <div class="form-check">
                    <input class="form-check-input" type="radio" name="akcRegistrable" id="akcRegistrable" value="false" required <%= puppies[i].akcregistrable ? "" : "checked" %>>
                    <label class="form-check-label" for="flexRadioDefault1">
                      No
                    </label>
                </div>
                <div class="form-check">
                  <input class="form-check-input" type="radio" name="akcRegistrable" id="akcRegistrable" value="true" <%= puppies[i].akcregistrable ? "checked" : "" %>>
                  <label class="form-check-label" for="flexRadioDefault2">
                    Yes
                  </label>
                </div>
            </div>
            <div class="col py-2">
              <label for="soldStatus">Sold?</label>
              <div class="form-check">
                <input class="form-check-input" type="radio" name="soldStatus" id="soldStatus" value="false" required <%= puppies[i].sold ? "" : "checked" %>>
                <label class="form-check-label" for="flexRadioDefault1">
                  No
                </label>
              </div>
              <div class="form-check">
                <input class="form-check-input" type="radio" name="soldStatus" id="soldStatus" value="true" <%= puppies[i].sold ? "checked" : "" %>>
                <label class="form-check-label" for="flexRadioDefault2">
                  Yes
                </label>
              </div>
            </div>

          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
            <button type="submit" class="btn btn-primary">Update</button>
          </div>
          </form>
        </div>
      </div>
  </div>

  <div class="modal fade" id="<%=`${puppies[i].id}photo`%>" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h1 class="modal-title fs-5" id="staticBackdropLabel">Only Change Updates</h1>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <form action="/addPuppyImages" method="post" enctype="multipart/form-data" class="row g-3">
            <div class="col">
              <label for="puppyImageUpload" class="form-label">Add Images</label>
              <input class="form-control" type="file" name="puppyImageUpload" multiple>
              <input type="hidden" name="puppyId" value="<%= puppies[i].id %>">
            </div>
            <button type="submit" class="btn btn-primary">Add Photos</button>
          </form>

          <% for(let j = 0; filteredURLs.length > j; j++ ) {%>
          <div class="container position-relative">
            <form action="/deletePuppyImage" method="post">
              <img src="<%=`https://d3trlmj493rccc.cloudfront.net/${filteredURLs[j].imageid}`%>" class="img-thumbnail" alt="...">
              <input type="hidden" name="photoDeleteID" id="photoDeleteID" value="<%= filteredURLs[j].imageid %>">
              <button type="submit" class="btn btn-danger position-absolute bottom-0 end-0 m-1 mx-3">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash3" viewBox="0 0 16 16">
                  <path d="M6.5 1h3a.5.5 0 0 1 .5.5v1H6v-1a.5.5 0 0 1 .5-.5M11 2.5v-1A1.5 1.5 0 0 0 9.5 0h-3A1.5 1.5 0 0 0 5 1.5v1H1.5a.5.5 0 0 0 0 1h.538l.853 10.66A2 2 0 0 0 4.885 16h6.23a2 2 0 0 0 1.994-1.84l.853-10.66h.538a.5.5 0 0 0 0-1zm1.958 1-.846 10.58a1 1 0 0 1-.997.92h-6.23a1 1 0 0 1-.997-.92L3.042 3.5zm-7.487 1a.5.5 0 0 1 .528.47l.5 8.5a.5.5 0 0 1-.998.06L5 5.03a.5.5 0 0 1 .47-.53Zm5.058 0a.5.5 0 0 1 .47.53l-.5 8.5a.5.5 0 1 1-.998-.06l.5-8.5a.5.5 0 0 1 .528-.47M8 4.5a.5.5 0 0 1 .5.5v8.5a.5.5 0 0 1-1 0V5a.5.5 0 0 1 .5-.5"></path>
                </svg>
              </button>
            </form>
          </div>
          <%}%>
                <div class="modal-footer">
                  <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                </div>
            </div>
          </div>
        </div>
      </div>

      <div class="modal fade" id="<%= `${puppies[i].id}delete` %>" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <h1 class="modal-title fs-5" id="staticBackdropLabel">DELETE PUPPY (NOT RECOMMENDED)</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
              </div>
              <div class="modal-body">
                <form action="/deletePuppy" method="post" class="row g-3">
                  <div class="col">
                    <input type="hidden" name="id" id="id" value="<%= puppies[i].id %>" />
                    <p class="py-1">(EDIT)It is recommended to mark puppies as sold and to not delete. This is Not Reversible and Will Delete all Images of This Puppy As Well.</p>
                    <button type="submit" class="btn btn-danger mb-2">DELETE</button>
                  </div>
                  <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Update</button>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
        <% } %>
      </div>
    </div>

    </table>
  </div>
</div>

<%- include("../partials/footer.ejs") %>